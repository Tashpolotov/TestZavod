<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/container_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="100dp"
        android:backgroundTint="@color/gray"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@drawable/ic_profile"
            />
    </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_message_friend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/container_card_view"
            app:layout_constraintTop_toTopOf="@id/container_card_view"
            app:layout_constraintBottom_toBottomOf="@id/container_card_view"
            android:layout_marginTop="4dp"
            android:gravity="end"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="10dp"
            android:text="asdasdasdasdasdsa"
            android:layout_marginBottom="4dp"
            android:textSize="16dp"
            android:textColor="@color/main_color"
            android:textStyle="bold"
            />


</androidx.constraintlayout.widget.ConstraintLayout>